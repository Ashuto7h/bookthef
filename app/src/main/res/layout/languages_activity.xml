<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/languages_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Languages"
        android:textSize="28sp" />
    <ScrollView
        android:layout_below="@id/languages_textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/languages_layout1"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_hindi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_tamil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/languages_layout2"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/languages_layout1"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_marathi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_telugu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/languages_layout3"
                android:layout_marginTop="20dp"
                android:layout_below="@id/languages_layout2"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_malayalam"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_gujarati"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_below="@id/languages_layout3"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:id="@+id/languages_layout4"
                >
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_bengali"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />
                <ImageView
                    android:layout_margin="10dp"
                    android:id="@+id/languages_kannada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/grey"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>