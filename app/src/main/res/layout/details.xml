<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/book_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_below="@+id/book_image"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="Book Title:"
                            android:maxLines="3"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/title_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:layout_marginBottom="20dp"
                            android:hint="The Sister Grimm "
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="Author:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/author_field"
                            android:layout_width="match_parent"
                            android:layout_weight=".3"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="Menna van Praag"
                            android:maxLines="3"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="Publisher:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/publisher_field"
                            android:layout_width="match_parent"
                            android:layout_weight=".3"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:hint="Bantam Press"
                            
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="Binding:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/binding_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:layout_marginBottom="20dp"
                            android:hint="Hardcover"
                            
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".8"
                                android:layout_marginBottom="20dp"
                                android:hint="Condition:"
                                android:textColorHint="@color/black"
                                android:textSize="18sp" />
                            <TextView
                                android:id="@+id/condition_field"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".3"
                                android:layout_marginBottom="20dp"
                                android:hint="Good"
                                
                                android:textColorHint="@color/black"
                                android:textSize="18sp" />
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="ISBN-10:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/isbn_10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:layout_marginBottom="20dp"
                            android:hint="9781787631663"
                            
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="ISBN-13:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/isbn_13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:layout_marginBottom="20dp"
                            android:hint="9781787631663"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:layout_marginBottom="20dp"
                            android:hint="Pages:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/pages_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:layout_marginBottom="20dp"
                            android:hint="496"
                            
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".8"
                            android:hint="Published Date:"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/published_field"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight=".3"
                            android:layout_marginBottom="20dp"
                            android:hint="6/3/2020"
                            android:textColorHint="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_below="@+id/linearLayout4"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:hint="Description:"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/description_field"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:hint="Not Available"
                    android:textColorHint="@color/black"
                    android:layout_margin="10dp"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
