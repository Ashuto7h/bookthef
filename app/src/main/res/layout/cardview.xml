<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/tap_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/book_image"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/r17"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:layout_gravity="center"
            android:padding="4dp"
            >
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:hint="The Devil Wears and jgj gjg jhg jhg jhg j jgh jgh jhg jhg  "
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:textColorHint="@color/black"
                android:textStyle="bold"

                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lauren Weisberger"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:textColor="@color/blue"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/book_price"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="$ 299"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:textColorHint="@color/black"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/out_of_stock"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="out of stock!"
                    android:textColor="@color/r16"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:textColorHint="@color/black"
                    />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <RatingBar
                    android:id="@+id/book_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:numStars="5"
                    android:theme="@style/RatingBar" />


                <ImageView
                    android:layout_toStartOf="@id/add_to_cart"
                    android:id="@+id/add_to_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_favorite_border_24px"
                    android:backgroundTint="@color/white"

                    />

                <ImageView
                    android:id="@+id/add_to_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_shopping_cart_24px"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentEnd="true"
                    >
                </ImageView>

        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>