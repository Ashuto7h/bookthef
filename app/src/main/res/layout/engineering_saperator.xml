<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/cs_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Computer Science"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/blue"
        android:fontFamily="monospace"
        android:textSize="27sp"
        />
    <Button
        android:id="@+id/ml_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Mechanical"
        android:fontFamily="monospace"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/blue"
        android:textSize="27sp"
        />
    <Button
        android:id="@+id/civil_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Civil"
        android:fontFamily="monospace"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/blue"
        android:textSize="27sp"
        />
    <Button
        android:id="@+id/chemical_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Chemical"
        android:fontFamily="monospace"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/blue"
        android:textSize="27sp"
        />
    <Button
        android:id="@+id/electronics_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Electronics"
        android:fontFamily="monospace"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/blue"
        android:textSize="27sp"
        />

    <Button
        android:id="@+id/agriculture_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:hint="Agriculture"
        android:fontFamily="monospace"
        android:backgroundTint="@color/grey"
        android:textColorHint="@color/blue"
        android:textSize="27sp"
        />
</LinearLayout>